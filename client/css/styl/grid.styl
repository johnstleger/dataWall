html 
	box-sizing border-box

*, *:before, *:after 
	box-sizing inherit



.grid
	margin 0 auto
	display block
	.col
		width 100%
		float left
		min-height 5px
		height auto
		display block

		&.pad-right
			padding-right 15vh
		&.pad-left
			padding-right 15vh
		
		&.col-2-3 
			width 66.66%
		
		&.col-1-3 
			width 33.33%
		
		&.col-1-2 
			width 50%
		
		&.col-1-4 
			width 25%
		
		&.col-3-4 
			width 75%

		&.col-1-8 
			width 12.5%
			
		&.col-3-8 
			width 37.5%
		
		&.col-5-8 
			width 62.5%

		&.col-7-8 
			width 87.5%

		&.col-1-12 
			width 8.33%

		&.pad-10
			padding 10px

		&.pad-20
			padding 20px


		//Tablet
		@media screen and (max-width: 1150px)

			&.col-tab-1-1 
				width 100%


			&.col-tab-1-2 
				width 50%


			&.col-tab-1-3 
				width 33.33%

			&.col-tab-2-3 
				width 66.66%
		
			
			&.col-tab-1-4 
				width 25%
			
			&.col-tab-3-4 
				width 75%


			&.col-tab-1-8 
				width 12.5%

			&.col-tab-7-8 
				width 87.5%

			&.col-tab-1-12 
				width 8.33%

			&.col-tab-none
				display none

		//Mobile
		@media screen and (max-width: 600px)

			&.col-mob-1-1
				width 100%

			&.col-mob-1-2
				width 50%

			&.col-mob-none
				display none
	&:after 
		content ""
		clear both
		display table

.site-width
	width 80%
	max-width 1600px 
	margin 0 auto 
	display block
	@media screen and (max-width: 600px)
		width 90%

.show-on-mob
	display none
	@media screen and (max-width: 600px)
		display block


@media screen and (max-width: 600px)

	.mob-site-width
		width 90%
		margin 0 auto
		display block

	.mob-no-site-width
		width 100%



