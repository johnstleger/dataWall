
.sentiment-emotions-chart
	position relative
	margin-top 7vh
	.axis-label
		position absolute
		text-align center
		top 50%
		&.left
			left 0
			transform rotate(-90deg)
		&.right
			right 0
			transform rotate(90deg)

	.centered-horizontal-bar
		width 80%
		margin 30px auto
		margin 4vh auto
		height auto
		display block
		&:after
			content ''
			display table
			clear both
		.label.center
			display block
			text-align center
			margin-bottom 10px
		.bar
			width calc(50% - 5px)
			float left
			height 25px
			height 2vh
			display block
			background-color $bg_light
			position relative
			overflow hidden
				
			span
				position absolute
				top 0
				height 100%
				background-color green
				width 0
				transform translate3d(0,0,0)
				backface-visibility hidden
				perspective 1000
				transition all 1000ms cubic-bezier(0.615, 0.015, 0.440, 1.000)
			&.positive
				margin-left 5px
				i.label
					right 0
					position absolute
					top -30px
				span
					left 0
					right auto
					background-color $teal

			&.negative
				margin-right 5px
				i.label
					left 0
					position absolute
					top -30px
				span
					right 0
					left auto
					background-color $pink



.horizontal-bar
	&:after
		content ''
		display table
		clear both
	.bar
		width 100%
		float left
		height 2vh
		display block
		background-color $bg_light
		position relative
		overflow hidden
		span
			position absolute
			top 0
			height 100%
			background-color $pink
			width 0
			transform translate3d(0,0,0)
			backface-visibility hidden
			perspective 1000
			transition all 1000ms cubic-bezier(0.615, 0.015, 0.440, 1.000)
