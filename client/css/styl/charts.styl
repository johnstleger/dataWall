
.sentiment-emotions-chart
	position relative
	margin-top 3.4vw
	.axis-label
		position absolute
		text-align center
		top 50%
		&.left
			left 0
			transform rotate(-90deg)
		&.right
			right 0
			transform rotate(90deg)

	.centered-horizontal-bar
		width 80%
		margin 1.4vw auto
		height auto
		display block
		&:after
			content ''
			display table
			clear both
		.label.center
			display block
			text-align center
			margin-bottom 0.2vw
		.bar
			width calc(50% - 5px)
			float left
			height 25px
			height 1.3vw
			display block
			background-color $bg_light
			position relative
			overflow hidden
				
			span
				position absolute
				top 0
				height 100%
				background-color green
				width 0
				transform translate3d(0,0,0)
				backface-visibility hidden
				perspective 1000
				transition all 1000ms cubic-bezier(0.615, 0.015, 0.440, 1.000)
			&.positive
				margin-left 5px
				i.label
					right 0
					position absolute
					top -30px
				span
					left 0
					right auto
					background-color $teal

			&.negative
				margin-right 5px
				i.label
					left 0
					position absolute
					top -30px
				span
					right 0
					left auto
					background-color $pink



.horizontal-bar
	&:after
		content ''
		display table
		clear both
	.bar
		width 100%
		float left
		height 1.3vw
		display block
		background-color $bg_light
		position relative
		overflow hidden
		margin-top 1vw
		span
			float left
			height 100%
			width 0
			transform translate3d(0,0,0)
			backface-visibility hidden
			perspective 1000
			transition all 1000ms cubic-bezier(0.615, 0.015, 0.440, 1.000)
			margin-right 10px
		&.negative span
			background-color $pink




.horizontal-bar-stacked
	margin 1.4vw auto
	&:after
		content ''
		display table
		clear both
	.bar
		width 100%
		float left
		height 1vw
		display block
		background-color $bg_light
		position relative
		overflow hidden
		margin-top 0.7vw
		span
			float left
			height 100%
			width 0
			transform translate3d(0,0,0)
			backface-visibility hidden
			perspective 1000
			transition all 1000ms cubic-bezier(0.615, 0.015, 0.440, 1.000)
			&.negative
				background-color $pink
			&.positive
				background-color $blue
			&.blue
				background-color $blue
			&.teal
				background-color $teal
			&.pink
				background-color $pink

