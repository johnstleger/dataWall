*
	margin 0
	border none
	padding 0
	box-sizing border-box

// css reset
@import "styl/reset.styl"
@import "styl/fonts.styl"

// mixins and general
@import "styl/colors.styl"
@import "styl/mixins.styl"
@import "styl/general.styl"
@import "styl/grid.styl"

// modules
@import "styl/animations.styl"
@import "styl/charts.styl"

@import "styl/center.styl"





body
	background-color #FFF

	#backbone-app
		width 100%
		transform translate3d(0, 0, 0)
		backface-visibility hidden
		perspective 1000
		position fixed
		top 0
		left 0
		background-color $bg
		&:after
			padding-top 56.25% /* 16:9 ratio */
			display block
			content ''
		&.loading
			background-position center
			background-size 99px 99px
			background-image url(/img/loading.gif)
			background-repeat no-repeat

		.transition-wipe
			position fixed
			top 0
			left 0
			display block
			width 100%
			height 100%
			opacity 1
			z-index 50
			&.blue
				background-color $blue
			&.teal
				background-color $teal
			&.pink
				background-color $pink
			&.orange
				background-color $orange

		.guide
			width 100%
			height auto
			position absolute
			top 0
			left 0
			z-index 2
			opacity 1
			pointer-events none


		.view
			width calc(100% - 10vw)
			height calc(100% - 10vw)
			margin 50px
			border 2px solid rgba(255,255,255,0.02)
			position absolute
			top 0
			bottom 0
			left 0 
			right 0
			margin auto 
			transform translate3d(0,0,0.1)
			backface-visibility hidden
			perspective 1000
			&.no-margins
				width 100%
				height 100%


			





// Blocks --

.stat-block
	padding-left 1.5vw
	border-left $line-width solid red
	h1
		font-size 5vw
		font-weight bold

	&.top-right
		position absolute
		top 0
		right 0
		padding-right 1.5vw

.title-block
	.title
		line-height 4.5vw
		span.fill
			line-height inherit
			height inherit
			background-color red
			display inline-block
			padding 0 2vw 0 2vw
			margin-right 20px
			&.pink
				background-color #ff275b

		span.underline
			line-height inherit
			height inherit
			position relative
			display inline-block
			&:after
				 content ''
				 display block
				 height $line-width
				 width 100%
				 background-color red
				 position absolute
				 bottom 0.3vh
				 left 0
			&.positive:after
				background-color $teal
			&.negative:after
				background-color $pink

.map-container
	width 100%
	height auto
	position relative
	&:after
		content ''
		padding-top 56.25%
		display block
	.map-block
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		opacity 0.6
		.gm-style-cc
			display none
	.canvas-block
		position absolute
		top 0
		left 0
		width 100%
		height 100%

	.tool-tip
		position absolute 
		top 0 
		left 0 
		color #FFF
		padding 1vw
		max-width 34vw
		font-size 2vw
		background-color red
		margin-left -30px
		margin-top 20px
		background rgba(0,0,0,0.4)
		&:after
			content ''
			width 0
			height 0
			border 20px solid transparent
			border-bottom 20px solid rgba(0,0,0,0.4)
			display block
			position absolute
			top -40px
			left 10px
