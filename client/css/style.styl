*
	margin 0
	border none
	padding 0
	box-sizing border-box

// css reset
@import "styl/reset.styl"
@import "styl/fonts.styl"

// mixins and general
@import "styl/colors.styl"
@import "styl/mixins.styl"
@import "styl/general.styl"
@import "styl/grid.styl"

// modules
@import "styl/animations.styl"
@import "styl/charts.styl"

@import "styl/center.styl"





body
	background-color #000
	#backbone-app
		transform translate3d(0, 0, 0)
		backface-visibility hidden
		perspective 1000
		position fixed
		top 0
		left 0
		background-color $bg
		width 1920px
		height 1080px
		overflow hidden
		display block


		&.loading
			background-position center
			background-size 99px 99px
			background-image url(/img/loading.gif)
			background-repeat no-repeat


		.transition-wipe
			position fixed
			top 0
			left 0
			display block
			width 100%
			height 100%
			opacity 1
			z-index 50
			&.blue
				background-color $blue
			&.teal
				background-color $teal
			&.pink
				background-color $pink
			&.orange
				background-color $orange


		.guide
			width 100%
			height auto
			position absolute
			top 0
			left 0
			z-index 2
			opacity 1
			pointer-events none

		.view
			width calc(100% - 250px)
			height calc(100% - 250px)
			margin 50px
			border 2px solid rgba(255,255,255,0.02)
			position absolute
			top 0
			bottom 0
			left 0 
			right 0
			margin auto 
			transform translate3d(0,0,0.1)
			backface-visibility hidden
			perspective 1000


			




// General --

.stat-block
	padding-left 30px
	border-left 10px solid red

.title-block
	.title
		line-height 80px
		height 80px
		span.fill
			line-height inherit
			height inherit
			background-color red
			display inline-block
			padding 0 20px 0 20px
			margin-right 20px
			&.pink
				background-color #ff275b

		span.underline
			line-height inherit
			height inherit
			position relative
			display inline-block
			&:after
				 content ''
				 display block
				 height 6px
				 width 100%
				 background-color red
				 position absolute
				 bottom 5px
				 left 0
			&.positive:after
				background-color $teal
			&.negative:after
				background-color $pink

.tweet-block-1
	padding-left 30px
	border-left 10px solid red








// Blocks --
.grid-chart-block
	li
		width calc(10% - 10px)
		margin 5px
		float left
		height 40px
		display block
		background-color $bg_light
		i
			width 100%
			height 100%
			display block
			position absolute


ul.twitter-loop-block
	width 100%
	height 300px
	display block
	position relative
	li
		position absolute
		top 0
		left 0
		padding-left 40px
		border-left 10px solid green
		&.negative
			border-left 10px solid $pink
		&.positive
			border-left 10px solid $teal
		&.neutral
			border-left 10px solid green
		.handle
			position absolute
			line-height 30px
			top 0
			left -70px
			transform-origin top left
			width auto
			height auto
			text-align right
			transform rotate(-90deg) translateX(-100%)
