.grid-chart-block
	li
		width calc(10% - 0.6vw)
		margin-top 0.6vw
		margin-right 0.6vw
		float left
		height auto
		display block
		background-color $bg_light
		position relative
		&:after
			content ''
			display block
			padding-top 50%
		i
			width 100%
			height 100%
			display block
			position absolute
			background-color red



table.train-table-block
	color #FFF
	width 100%
	tr
		border-bottom 0.6vw solid $bg
		td
			padding 0.5vw 1.5vw
			width 50%
			border-left 0.6vw solid $bg
			background-color $bg_light
			&:first-child
				width 25%


ul.twitter-loop-block
	width 100%
	height 16vw
	display block
	position relative
	margin $pad 0
	li
		position absolute
		top 0
		left 0


		div.tweet-block-3 
			.handle
				color $pink
				margin-bottom 1vw
			.text
				padding-left 1.8vw
				border-left $line-width solid $pink
				margin-bottom 1vw
				font-size 3.5vw
				line-height 4vw


		div.tweet-block-2 
			.handle
				color $pink
				margin-bottom 10px
			.text
				padding-left 1.8vw
				border-left $line-width solid $pink


		div.tweet-block-1
			padding-left 6vh
			border-left 0.7vh solid $bg_light
			&.negative
				border-left 0.7vh solid $pink
			&.positive
				border-left 0.7vh solid $teal
			&.neutral
				border-left 0.7vh solid green
			.handle
				position absolute
				line-height 30px
				top 0
				left -11vh
				transform-origin top left
				width auto
				height auto
				text-align right
				transform rotate(-90deg) translateX(-100%)
